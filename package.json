{
  "name": "polyglot-starter",
  "private": true,
  "version": "0.1.0",
  "description": "A pnpm-based monorepo containing API, Web, and Proxy workspaces.",
  "author": "Ahmed Backer <ahmedbackerjr@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "api",
    "web",
    "proxy"
